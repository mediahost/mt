<!DOCTYPE html>
<!--[if IE 8]> <html lang="{$lang}" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="{$lang}" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="{$lang}">
	<!--<![endif]-->
	{includeblock '../../BaseModule/templates/metronic.defines.latte'}

	<!-- BEGIN HEAD -->
	<head>
		<title>{ifset $pageTitle}{$pageTitle} | {/ifset}{block title|striptags}{$pageInfo->projectName}{/block}</title>

		<meta charset="utf-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
		<meta name="robots" content="index,follow">
		<meta name="google-site-verification" content="sesmeb3yQGdzm52jlDqaEfd2Cm1wvfRCi7J0hLkzRBg">
		<meta name="description" content="{$pageDescription|striptags}"/>
		<meta name="keywords" content="{$pageKeywords}">
		<meta name="author" content="{$pageInfo->author}"/>

		<meta property="og:type" content="website">
		<meta property="og:site_name" content="{$pageInfo->projectName}">
		<meta property="og:title" content="{include title}">
		<meta property="og:description" content="{$pageDescription|striptags}">
		<meta property="og:image" content="{link //Homepage:}favicon.png">
		<meta property="og:url" content="{link //this}">

		{include cssMetronicCore}
		{include cssMetronicFrontTheme}

		{control cssFront}
		{control cssPrint}

		<link href="{$basePath}/favicon.ico" rel="shortcut icon">

		{block head}{/block}
	</head>
	<!-- END HEAD -->

	<!-- Body BEGIN -->
	<body class="{block bodyClass}ecommerce{/block}">
		<script> document.documentElement.className += ' js'</script>

		{snippetArea header}
		{include 'header.latte'}
		{/snippetArea}

		{include 'slider.latte'}

		<div class="main">
			<div class="container">

				<!-- BEGIN BREADCRUMBS -->

				<ul class="breadcrumb" n:block="breadcrumb">
					{var breadcrumb => ['Home' => '']}
					<li><a n:href=":Front:Homepage:">{_'Home'}</a></li>
					{block breadcrumbItems}{/block}
				</ul>
				<!-- END BREADCRUMBS -->

				<!-- CONTENT -->
				<div n:class="row, !$showBrands ? margin-bottom-40">

					<!-- BEGIN FLASH MESSAGES-->
					<div n:snippet="flashMessages">
						<div n:foreach="$flashes as $flash"
							 class="alert alert-{$flash->type} fade in">
							<button type="button" class="close" data-dismiss="alert"></button>
							{$flash->message}
						</div>
					</div>
					<!-- END FLASH MESSAGES-->

					<!-- BEGIN CONTENT -->
					{include content}
					<!-- END CONTENT -->
				</div>
				<!-- END SIDEBAR & CONTENT -->
			</div>
		</div>

		{include 'footer.latte'}

		{block scripts}
		<!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
		{include jsMetronicCore}
		{include jsFrontApp}
		<!-- END JAVASCRIPTS -->
		{/block}
	</body>
	<!-- END BODY -->
</html>