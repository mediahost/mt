{snippet stockPrint}
	<div class="{$mainClasses}" id="{$id}">
		{var blockId => 'stockPrint' . $stock->id}
		{var product => $stock->product}
		{var countInBasket => $basket->getCountInBasket($stock)}
		{var loadingSelector => '#mainContainer'}
		{var clickSelector => '#basket-dialog-caller'}

		<ul class="product-labels" n:if="$showLabels">
			<li n:if="$product->hasSign($newSign)" class="new">{$newSign}</li>
			<li n:if="$product->hasSign($saleSign)" class="sale">{$saleSign}</li>
			<li n:if="$product->hasSign($topSign)" class="top">{$topSign}</li>
		</ul>
		<ul class="product-labels right">
			<li n:if="$countInBasket">
				<i class="fa fa-shopping-cart"></i>
				{$countInBasket}x
			</li>
		</ul>
		<div n:class="$showSecondImage && $product->secondImage ? product-img-wrap : product-img-wrap-single">
			<img class="product-img-primary" src="{$basePath}/foto/{$product->image|size:300}"
				 alt="{$product}" title="{$product}"/>
			<img n:if="$showSecondImage && $product->secondImage" class="product-img-alt"
											  src="{$basePath}/foto/{$product->secondImage|size:300}"
											  alt="{$product}" title="{$product}"/>
		</div>
		<a class="product-link" href="{plink Product: 'id' => $stock->getUrlId(), 'slug' => $stock->getSlug()}"></a>
		<div class="product-caption">
			<h5 class="product-caption-title">
				{$product}
			</h5>
			<div class="row">
				<div class="col-lg-7 col-md-6 col-sm-12 col-xs-8 product-caption-price">
					<span class="product-caption-price-new">
						{$stock->getPrice($priceLevel)|currencyVat}
					</span>
					<span class="product-caption-price-old" n:if="$stock->oldPrice">
						{$stock->oldPrice|currency}
					</span>
				</div>
				<div class="col-md-5 col-md-6 col-sm-12 col-xs-4 product-caption-button text-right">
					<a n:href="addToCart! $showLabels, $showSecondImage, $mainClasses"
							n:class="ajax, btn, $basket->getCountAllowedToAdd($stock) ? btn-primary : btn-default, add2cart, !$basket->getCountAllowedToAdd($stock) ? disabled"
					data-target-click="{$clickSelector}"
					data-target-loading="{$loadingSelector}"
					data-ajax-off="history">
						<span class="text">{_'Add to cart'}</span>
						<span class="icon fa fa-shopping-cart"></span>
					</a>
				</div>
			</div>
			<div class="row">
				<div n:class="col-md-12, availability, $stock->inStore > 0 ? available">
					{if $stock->inStore > 10}
						<strong>{_'In Stock > %count% %unit%', 10, ['unit' => $product->unit]}</strong>
					{elseif $stock->inStore > 5}
						<strong>{_'In Stock > %count% %unit%', 5, ['unit' => $product->unit]}</strong>
					{elseif $stock->inStore > 0}
						<strong>{_'In Stock %count% %unit%', $stock->inStore, ['unit' => $product->unit]}</strong>
					{else}
						<strong>{_'Temporarily Sold Out'}</strong>
					{/if}
				</div>
			</div>

		</div>
	</div>
{/snippet}