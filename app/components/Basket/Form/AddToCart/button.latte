{snippet AddToCart}
	{form form}	
		{? $form->render('begin')}

		<div class="form-body">
			<div class="quantity-button">
				{button add, class=>"btn btn-lg btn-primary"}
					<i class="fa fa-shopping-cart"></i>
					{_'Add to cart'}
				{/button}
			</div>
			<div n:if="$alreadyInBasket" class="already-in-basket">
				<i class="fa fa-shopping-cart"></i>
				{$alreadyInBasket}x
			</div>
			<div class="clearfix"></div>
		</div>

		<div class="alert alert-warning" n:if="$form->errors">
			{foreach $form->errors as $error}
				<span>{$error}</span><br n:if="!$iterator->last"/>
			{/foreach}
		</div>

		{? $form->render('end')}
	{/form}
{/snippet}