{snippet productSorting}
	{if count($stocks)}
		{form sortingForm}
			{? $form->render('begin')}
			<div class="row list-view-sorting clearfix">
				<div class="pull-right" 
					 n:foreach="$form->getComponents() as $name => $component" 
					 n:if="$component instanceof Nette\Forms\Controls\SelectBox">
					{!=$form->renderer->renderLabel($form[$name])}
					{input $form[$name]}
				</div>
			</div>
			{? $form->render('end')}
		{/form}
	{/if}
{/snippet}
