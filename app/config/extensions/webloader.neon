extensions:
	webloader: WebLoader\Nette\Extension

services:
	cssUrlFilter: WebLoader\Filter\CssUrlsFilter(%wwwDir%)
	cssMinFilter: Joseki\Webloader\CssMinFilter
	lessFilter: WebLoader\Filter\LessFilter
	varFilter: WebLoader\Filter\VariablesFilter([basePath=@urlScript::getBasePath()])

webloader:
	css:
		demo:
			files:
				- {files: ["*.less"], from: %wwwDir%/less/demo/includes}
			filters:
				- @cssUrlFilter
				- @cssMinFilter
			fileFilters:
				- @lessFilter

		front:
			files:
				- {files: ["*.less"], from: %wwwDir%/less/front/includes}
			filters:
				- @cssUrlFilter
				- @cssMinFilter
			fileFilters:
				- @lessFilter

		app:
			files:
				- {files: ["*.less"], from: %wwwDir%/less/app/includes}
			filters:
				- @cssUrlFilter
				- @cssMinFilter
			fileFilters:
				- @lessFilter

		print:
			files:
				- {files: ["*.less"], from: %wwwDir%/less/print/includes}
			filters:
				- @cssUrlFilter
				- @cssMinFilter
			fileFilters:
				- @lessFilter
