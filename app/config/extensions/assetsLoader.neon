					css:
						- "http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|PT+Sans+Narrow|Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all"
						- "http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all"
						- http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css
						- %wwwDir%/assets/frontend/css/style.css
						- %wwwDir%/assets/frontend/css/style-shop.css
						- %wwwDir%/assets/frontend/css/style-layer-slider.css
						- %wwwDir%/assets/frontend/css/style-responsive.css
						- %wwwDir%/assets/frontend/css/custom.css
				adminTheme:
					css:
						- "http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|PT+Sans+Narrow|Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all"
						- %wwwDir%/assets/admin/css/layout.css
						- %wwwDir%/assets/admin/css/custom.css
			app:
				pre:
					js:
						- %wwwDir%/assets/js/phpjs/functions/url/urlencode.js
						- %wwwDir%/assets/js/phpjs/functions/filesystem/file_exists.js
						- %wwwDir%/assets/global/scripts/config.js
						- %wwwDir%/assets/js/nette.ajax/nette.ajax.min.js
						- %wwwDir%/assets/js/nette.ajax/extensions/confirm.ajax.js
						- %wwwDir%/assets/js/nette.ajax/extensions/spinner.ajax.js
						- %wwwDir%/assets/js/live-form-validation.js
						- %wwwDir%/assets/js/nette.serversidevalidation.js
						- %wwwDir%/assets/global/scripts/metronic.js
						- %wwwDir%/assets/global/scripts/custom/forms.js
						- %wwwDir%/assets/global/scripts/custom/login.js
						- %wwwDir%/assets/global/scripts/custom/components-pickers.js
						- %wwwDir%/assets/global/scripts/custom/html-editors.js
						- %wwwDir%/assets/global/scripts/custom/components-form-tools.js
						- %wwwDir%/assets/global/scripts/custom/ui-toastr.js
						- %wwwDir%/assets/global/scripts/custom/fullscreen.js
						- %wwwDir%/assets/global/scripts/custom/table-managed.js
						- %wwwDir%/assets/global/scripts/custom/components-dropdowns.js
						- %wwwDir%/assets/global/scripts/custom/components-nouisliders.js
						- %wwwDir%/assets/global/scripts/custom/maps.js
						- %wwwDir%/assets/global/scripts/custom/layerslider.js
						- %wwwDir%/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js
						- %wwwDir%/assets/global/plugins/typeahead/typeahead.bundle.min.js
						- %wwwDir%/assets/global/plugins/grido/grido.js
						- %wwwDir%/assets/global/plugins/grido/js/grido.typeahead.js
						- %wwwDir%/assets/global/plugins/grido/js/grido.nette.ajax.js
						- %wwwDir%/assets/global/scripts/custom/grido.js
						- %wwwDir%/assets/global/scripts/custom/ui-tree.js
						- %wwwDir%/assets/global/scripts/custom-init.js
				post:
					js:
						- %wwwDir%/assets/js/main.js
				

assetsLoader:
	routes:
		assets: "assets-files/<id>[-t<timestamp>][-<gzipped>].<type>"
		files: "assets-files-images/<id>[-t<timestamp>]"

	assets:
		core:
			css:
				gzip: true
				filters:
					files: ['cssUrlsFilter']
					content : ['styleCompressor', 'cssImportFilter']
			js:
				gzip: true
			packages:
				- %assetsLoader.packages.metronic.core%
				- %assetsLoader.packages.app.pre%

		front:
			css:
				gzip: true
				files:
					- {files: ["*.less"], from: %wwwDir%/less/front/includes}
				filters:
					files: ['cssUrlsFilter', 'lessFilter']
					content : ['styleCompressor', 'cssImportFilter']
			js:
				gzip: true
				files:
					- %wwwDir%/assets/frontend/scripts/layout.js
					- %wwwDir%/assets/frontend/scripts/back-to-top.js
					- %wwwDir%/assets/frontend/scripts/init.js
			packages:
				- %assetsLoader.packages.metronic.frontTheme%
				- %assetsLoader.packages.app.post%

		admin:
			css:
				gzip: true
				files:
					- {files: ["*.less"], from: %wwwDir%/less/app/includes}
				filters:
					files: ['cssUrlsFilter', 'lessFilter']
					content : ['styleCompressor', 'cssImportFilter']
			js:
				gzip: true
				files:
					- %wwwDir%/assets/admin/scripts/layout.js
					- %wwwDir%/assets/admin/scripts/quick-sidebar.js
					- %wwwDir%/assets/admin/scripts/custom/app-content.js
					- %wwwDir%/assets/admin/scripts/init.js
				filters:
			packages:
				- %assetsLoader.packages.metronic.adminTheme%
				- %assetsLoader.packages.app.post%

		print:
			css:
				gzip: true
				files:
					- {files: ["*.less"], from: %wwwDir%/less/print/includes}
				filters:
					files: ['cssUrlsFilter', 'lessFilter']
					content : ['styleCompressor', 'cssImportFilter']
			js:
				gzip: true