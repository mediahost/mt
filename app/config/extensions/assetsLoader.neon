						- %wwwDir%/assets/global/plugins/pace/themes/pace-theme-minimal.min.css
						- %wwwDir%/assets/global/plugins/bootstrap-datepicker/css/datepicker3.min.css
						- %wwwDir%/assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.min.css
						- %wwwDir%/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css
						- %wwwDir%/assets/global/plugins/bootstrap-toastr/toastr.min.css
						- %wwwDir%/assets/global/plugins/jquery-multi-select/css/multi-select.min.css
						- %wwwDir%/assets/global/plugins/select2.4/css/select2.min.css
						- %wwwDir%/assets/global/plugins/jquery-tags-input/jquery.tagsinput.min.css
						- %wwwDir%/assets/global/plugins/nouislider/jquery.nouislider.min.css
						- %wwwDir%/assets/global/plugins/nouislider/jquery.nouislider.pips.min.css
						- %wwwDir%/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css
						- %wwwDir%/assets/global/plugins/typeahead/typeahead.min.css
						- %wwwDir%/assets/global/plugins/fancybox/source/jquery.fancybox.min.css
						- %wwwDir%/assets/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.css
						- %wwwDir%/assets/global/plugins/slider-layer-slider/css/layerslider.min.css
						- %wwwDir%/assets/global/plugins/jstree/dist/themes/default/style.min.css
						# Global theme styles
						- %wwwDir%/assets/global/css/components.css
						- %wwwDir%/assets/global/css/plugins.css
						- %wwwDir%/assets/global/plugins/grido/grido.css
					js:
						- %wwwDir%/assets/global/plugins/jquery.min.js
						- %wwwDir%/assets/global/plugins/jquery-migrate.min.js
						- %wwwDir%/assets/global/plugins/jquery-ui/jquery-ui-1.10.3.custom.min.js
						- %wwwDir%/assets/global/plugins/bootstrap/js/bootstrap.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js
						- %wwwDir%/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js
						- %wwwDir%/assets/global/plugins/jquery.blockui.min.js
						- %wwwDir%/assets/global/plugins/jquery.cookie.min.js
						- %wwwDir%/assets/global/plugins/uniform/jquery.uniform.min.js
						# Global plugins
						- %wwwDir%/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-touchspin/bootstrap.touchspin.min.js
						- %wwwDir%/assets/global/plugins/bootstrap-toastr/toastr.min.js
						- %wwwDir%/assets/global/plugins/fuelux/js/spinner.min.js
						- %wwwDir%/assets/global/plugins/jquery-validation/js/jquery.validate.min.js
						- %wwwDir%/assets/global/plugins/jquery-multi-select/js/jquery.multi-select.min.js
						- %wwwDir%/assets/global/plugins/select2.4/js/select2.min.js
						- %wwwDir%/assets/global/plugins/jquery-tags-input/jquery.tagsinput.min.js
						- %wwwDir%/assets/global/plugins/backstretch/jquery.backstretch.min.js
						- %wwwDir%/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js
						- %wwwDir%/assets/global/plugins/jquery.input-ip-address-control-1.0.min.js
						- %wwwDir%/assets/global/plugins/nouislider/jquery.nouislider.all.min.js
						- %wwwDir%/assets/global/plugins/liblink/jquery.liblink.min.js
						- "https://maps.google.com/maps/api/js?sensor=true"
						- %wwwDir%/assets/global/plugins/gmaps/gmaps.min.js
						- %wwwDir%/assets/global/plugins/fancybox/source/jquery.fancybox.pack.js
						- %wwwDir%/assets/global/plugins/zoom/jquery.zoom.min.js
						- %wwwDir%/assets/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.js
